
<p style="color: green"><%= notice %></p>

<div class="container">
<h1 class="text-center">Twitter</h1>
<div class="row">
  <div class="col-md-4">
  
        <h2 class="fw-normal">username</h2>
        <p><a class="btn btn-secondary" href="#">Change profile pic</a></p>
  
  </div>
  <div class="col-md-4">  
  <div id="tweets">
   
    <% @tweets.each do |tweet| %>
      <%= render tweet %>
    <%= tweet.user.image %>
      <p>
        <%= link_to "Show this tweet", tweet %>
      </p>
    <% end %>
  </div>

  <%= link_to "New tweet", new_tweet_path %>
  </div>
  </div>
  <div class="col-md-4">
  
  <%= form_with model: [@tweet, @comment],local: true, data: { turbo: false} do |f|%>
    <%= f.text_field :body%>
    <%= f.submit "Comment" %>
  <% end %>

  <% @comments.each do |comment|%>
    [<%= comment.created_at.strftime("%I:%M %P") %>]<%= comment.user.username %>: <%= comment.body %>
    <br/>

  <% end %>
  </div>

</div>